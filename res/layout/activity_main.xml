<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    
    <EditText android:id="@+id/enter_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:hint="@string/enter_currency" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="convertToPounds"
        android:text="@string/convert" />
    
    <TextView 
        android:id="@+id/pound_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:text="@string/pound_currency"
    	android:layout_marginTop="10dp"
    	android:gravity="center"/>
    
    <TextView 
        android:id="@+id/show_pounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop = "4dp"
    	android:gravity="center"/>
    
    <TextView 
        android:id="@+id/usd_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:text="@string/usd_currency"
        android:layout_marginTop="10dp"    	
    	android:gravity="center"/>
    
    <TextView 
        android:id="@+id/show_usd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop = "4dp"
    	android:gravity="center"/>
    
</LinearLayout>